@model DogGo.Models.ViewModels.WalkerProfileViewModel

@{
    ViewData["Title"] = "Walker Profile";
}

<h1>Walker Profile</h1>
<div>
<section class="container">
    <img
      style="width:100px;float:left;margin-right:20px"
      src="https://upload.wikimedia.org/wikipedia/commons/a/a0/Font_Awesome_5_regular_user-circle.svg"
    />
    <div>
      <label class="font-weight-bold">Name:</label>
      <span>@Model.Walker.Name</span>
    </div>
    <div>
      <label class="font-weight-bold">Neighborhood:</label>
      <span>@Model.Walker.Neighborhood.Name</span>
    </div>
  </section>

  <hr class="mt-5" />
  <div class="clearfix"></div>

  <section class="col-lg-6 col-md-8 container mt-5">
      <h3>Recent Walks</h3>

      <ul class="list-group mt-4">
        <li class="list-group-item disabled" aria-disabled="true">
          <span class="font-weight-bold ml-4">Date</span>
          <span class="font-weight-bold ml-4">Client</span>
          <span class="font-weight-bold ml-4">Duration</span>
      </li>
        @foreach (Walk walk in Model.Walks) {
        <li class="list-group-item disabled" aria-disabled="true">
          <span class="font-weight-bold ml-4">@walk.Date</span>
          <span class="font-weight-bold ml-4">@walk.Dog.Name</span>
          <span class="font-weight-bold ml-4">@walk.Duration min</span>
        </li>
        }
      </ul>
    </section>

    <section>
        <h3>Total Walk Time: @Model.TotalWalkTime hrs</h3>
    </section>
</div>

<div>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Walker.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
